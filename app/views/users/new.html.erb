<h2>Login</h2>

<%= form_tag "login/" do %>
    <%= label_tag :username %>
    <%= text_field_tag :username, params[:username] %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= submit_tag "Log in" %>
<% end %>


<h2>Signup</h2>

<%= form_for @user do |f|  %>
<p><%=     f.text_field     :firstname, placeholder: "Firstname" %></p>
<p><%=     f.text_field     :lastname, placeholder: "Lastname" %></p>
<p><%=     f.email_field    :email,    placeholder: "Email" %></p>
<p><%=     f.text_field     :username, placeholder: "Username" %></p>
<p><%=     f.password_field :password, placeholder: "Password" %></p> 
<p><%=     f.submit "Sign up!" %>
<% end %>
